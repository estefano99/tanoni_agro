---
import { Image } from "astro:assets";
const { imagen, descripcion } = Astro.props;
---

<div
  class="flex flex-col items-center w-11/12 md:w-1/4 rounded-xl overflow-hidden gap-5 bg-gray-300 pb-4 cursor-pointer select-none hover:scale-105 transition-all hover:brightness-110 hover:shadow-xl"
>
  <Image src={imagen} alt="tractor" />
  <p class="w-full break-words p-2 text-clamp-xs font-semibold text-center">{descripcion}</p>
</div>
