---
import Card from "./Card.astro";
import cereales from "../../images/cereales.png";
import subproductos from "../../images/subproductos.png";
import segurosgranizo from "../../images/segurosgranizo.png";
---

<section class="w-full pt-24 min-h-[550px] bg-zinc-200 md:clip-path-quehacemos-wave">
  <div class="quehacemosReveal flex flex-col justify-evenly">
    <div class="w-full flex justify-center mb-5">
      <h2 class="text-clamp-md font-semibold text-gray-600">Qué hacemos</h2>
    </div>
    <div class="flex flex-col justify-evenly items-center md:flex-row gap-6 md:gap-0">
      <Card imagen={cereales} descripcion="CEREALES"/>
      <Card imagen={subproductos} descripcion="SUBPRODUCTOS / ACEITES"/>
      <Card imagen={segurosgranizo} descripcion="SEGUROS DE GRANIZO"/>
    </div>
    <div class="w-full py-6 flex justify-center">
      <a href="/es/quehacemos" class="transition-all hover:scale-105 text-clamp-xs mt-2 sm:w-1/3 md:w-1/6 justify-center inline-flex items-center text-white bg-gradient-to-r from-green-400 via-green-500 to-green-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-green-300 dark:focus:ring-green-800 font-medium rounded-lg px-5 py-2.5 text-center me-2 mb-2 cursor-pointer">
        Conócenos más
        <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    ScrollReveal().reveal(".quehacemosReveal", {
      reset: true,
      scale: 0.85,
      duration: 1000, // Ajusta la duración de la animación en milisegundos
      easing: "ease-in-out", // Ajusta el easing para suavizar el efecto
      interval: 500, // Añade un pequeño retraso entre los elementos
      delay: 300,
      origin: 'left',
      distance: '250px'
    });
  });

</script>