---
import logo from "../images/logo.png";
const { lang } = Astro.props;

const navLinks = {
  en: [
    { name: "home", path: "/en/" },
    { name: "Who we are", path: "/en/nosotros/" },
    { name: "What we do", path: "/en/quehacemos/" },
    { name: "contact us", path: "/en/contacto/" },
  ],
  es: [
    { name: "inicio", path: "/es/" },
    { name: "nosotros", path: "/es/nosotros/" },
    { name: "que hacemos", path: "/es/quehacemos/" },
    { name: "contacto", path: "/es/contacto/" },
  ],
};

// Obtener los enlaces correspondientes al idioma actual
const links = navLinks[lang] || "es";
