<script>
  import { btnES, btnEn } from "@/lib/constantes";
  const btnRenderizado = document.querySelector(".btnRenderizado");

  // Obtener el idioma actual desde la URL
  const getCurrentLanguageFromUrl = () => {
    const currentPath = window.location.pathname;
    // Detectar si estamos en la ruta /es/ o /en/
    const match = currentPath.match(/\/(es|en)\//);
    return match ? match[1] : "es"; // Si no se encuentra, por defecto será 'es'
  };

  // Función para cambiar el contenido del botón
  const updateButtonLanguage = (selectedLanguage) => {
    selectedLanguage === "es"
      ? (btnRenderizado.innerHTML = btnES)
      : (btnRenderizado.innerHTML = btnEn);
  };

  // Función para redirigir a la nueva URL si es necesario
  const redirectToNewLanguage = (selectedLanguage) => {
    const currentPath = window.location.pathname;
    const currentLanguage = getCurrentLanguageFromUrl();

    // Solo redirigir si el idioma seleccionado es diferente del actual
    if (selectedLanguage !== currentLanguage) {
      const newPath = currentPath.replace(
        /\/(es|en)\//,
        `/${selectedLanguage}/`
      );
      window.location.href = newPath;
    }
  };

  // Manejo del evento de selección de idioma
  document.addEventListener("DOMContentLoaded", () => {
    const languageOptions = document.querySelectorAll("[data-language]");

    // Detectar el idioma actual de la URL y actualizar el botón inicialmente
    const currentLanguage = getCurrentLanguageFromUrl();
    updateButtonLanguage(currentLanguage);

    languageOptions.forEach((option) => {
      option.addEventListener("click", () => {
        const selectedLanguage = option.getAttribute("data-language");

        // Actualizar el contenido del botón
        updateButtonLanguage(selectedLanguage);

        // Redirigir a la nueva URL si es necesario
        redirectToNewLanguage(selectedLanguage);
      });
    });

    const navbar = document.querySelector(".navbarReveal");
    const path = window.location.pathname;

    if (path === "/es/" || path === "/en/") {
      // Si el path es exactamente "/es" o "/en", se aplican estas clases
      navbar.classList.add("md:text-white", "text-black");
    } else {
      navbar.classList.add("sticky", "text-black", "bg-slate-200");
    }
  });
</script>
