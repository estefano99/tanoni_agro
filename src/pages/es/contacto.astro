---
import Layout from "../../layouts/Layout.astro";
import { MapPin, MessageCircleMore, Phone, Mail } from "lucide-react";
const { lang } = Astro.props;
---

<Layout title="Tanoni Agro - Contacto">
  <section class="w-full" transition:animate="slide">
    <div class="w-full h-[100px] flex items-center justify-center">
      <div class="w-4/5 flex justify-center items-center">
        <h2 class="text-xl font-bold text-gray-700">CONTÁCTANOS</h2>
        <hr class="flex-grow border-t border-gray-300 ml-4" />
      </div>
    </div>

    <article class="w-full my-5 bg-gray-50">
      <div class="w-4/5 flex flex-col md:flex-row mx-auto gap-10 md:gap-0">
        <div class="w-full flex flex-col justify-center gap-5">
          <h2 class="text-xl font-bold opacity-55">Ubicación geográfica</h2>
          <p class="flex gap-2">
            <MapPin /> Moreno 349. Bombal, Santa Fe, Argentina.
          </p>
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3328.585395176801!2d-61.3238819244658!3d-33.4601067733857!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95b7e0294ebdc52f%3A0x45a8522654395188!2sMoreno%20349%2C%20S2179%20Bombal%2C%20Santa%20Fe!5e0!3m2!1ses-419!2sar!4v1723761203769!5m2!1ses-419!2sar"
            width="400"
            height="250"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
          >
          </iframe>
        </div>
        <div class="w-[60%] flex flex-col gap-5">
          <h2 class="text-xl font-bold opacity-55">Datos de contacto</h2>
          <div class="flex flex-wrap gap-6">
            <div>
              <h2
                class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white"
              >
                {lang === "es" ? "Email" : "Email"}
              </h2>
              <ul class="text-gray-500 dark:text-gray-400 font-medium">
                <li class="mb-4">
                  <a
                    href="mailto:jose.castro@tanoniagro.com.ar"
                    target="_blank"
                    class="hover:underline flex gap-1"><Mail /> jose.castro@tanoniagro.com.ar</a
                  >
                </li>
                <li>
                  <a
                    href="mailto:carola.tanoni@tanoniagro.com.ar"
                    target="_blank"
                    class="hover:underline flex gap-1"><Mail /> carola.tanoni@tanoniagro.com.ar</a
                  >
                </li>
              </ul>
            </div>
            <div class="md:w-1/2">
              <h2
                class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white"
              >
              {lang === "es" ? "Telefono" : "Phone"}
              </h2>
              <ul class="text-gray-500 dark:text-gray-400 font-medium">
                <li class="mb-4">
                  <a href="tel:3413761704" class="hover:underline flex gap-1"
                    ><Phone /> 3413761704
                  </a
                  >
                </li>
                <li>
                  <a href="tel:3465409977" class="hover:underline flex gap-1"
                    ><Phone /> 3465409977
                  </a
                  >
                </li>
              </ul>
            </div>
            <div>
              <h2
                class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white"
              >
                Whatsapp
              </h2>
              <ul class="text-gray-500 dark:text-gray-400 font-medium">
                <li class="mb-4">
                  <a
                    href="https://wa.me/3413761704"
                    target="_blank"
                    class="hover:underline flex gap-1"><MessageCircleMore /> JOSE MARIA CASTRO</a
                  >
                </li>
                <li>
                  <a
                    href="https://wa.me/3465409977"
                    target="_blank"
                    class="hover:underline flex gap-1"><MessageCircleMore />CAROLA TANONI</a
                  >
                </li>
              </ul>
            </div>
          </div>
          
        </div>
      </div>
    </article>
  </section>
</Layout>