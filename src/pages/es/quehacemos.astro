---
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";
import cereales from "../../images/cereales.png";
import subproductos from "../../images/subproductos.png";
import segurosgranizo from "../../images/segurosgranizo.png";
import { slide } from "astro:transitions";
import { BadgeCheck } from "lucide-react";
import { cardCereales, cardSubProductos, cardGranizo } from "@/data";
---

<Layout title="Tanoni Agro - QuÃ© hacemos">
  <section
    class="flex flex-col gap-10 md:gap-0 px-5 box-border md:px-32 mb-16"
    transition:animate="fade"
  >
    <div class="w-full h-[100px] flex items-center justify-center">
      <h2 class="text-2xl font-bold text-gray-700">QUE HACEMOS</h2>
      <hr class="flex-grow border-t border-gray-300 ml-4" />
    </div>
    <div class="flex flex-col gap-20 w-full">
      <!-- CARD -->
      <div
        class="flex flex-col md:items-center md:flex-row w-full min-h-64 gap-8"
      >
        <div class="w-full h-full md:w-2/6">
          <Image src={cereales} alt="Tractor" width={400} height={300} class="w-4/5 mx-auto" />
        </div>
        <div class="flex flex-col w-full h-full md:w-4/6 gap-2">
          <h3 class="text-clamp-sm font-bold text-slate-800">
            {cardCereales.title}
          </h3>
          <h5 class="font-bold prose prose-neutral prose-base md:prose-lg">
            {cardCereales.subTitle}
          </h5>
          <p class="prose prose-slate prose-base md:prose-lg font-semibold">
            {cardCereales.description}
          </p>
          <p class="font-bold prose prose-slate prose-base md:prose-lg">Puntos Destacados:</p>
          <ul class="flex flex-col gap-2 text-md font-semibold prose prose-slate prose-base md:prose-lg">
            <li class="flex gap-2">
              <div class="flex-shrink-0">
                <BadgeCheck color="#13ec04" />
              </div>
              {cardCereales.items[0]}
            </li>
            <li class="flex gap-2">
              <div class="flex-shrink-0">
                <BadgeCheck color="#13ec04" />
              </div>
              {cardCereales.items[1]}
            </li>
            <li class="flex gap-2">
              <div class="flex-shrink-0">
                <BadgeCheck color="#13ec04" />
              </div>
              {cardCereales.items[2]}
            </li>
          </ul>
        </div>
      </div>
      <!-- CARD -->
